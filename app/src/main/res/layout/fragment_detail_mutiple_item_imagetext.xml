<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/home_item_margin"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/mutile_item_margin">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_landscape_image4"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="80dp"
            android:textSize="@dimen/home_item_tv_textsize"
            android:text="@string/rv_item_text" />
    </LinearLayout>

</androidx.cardview.widget.CardView>