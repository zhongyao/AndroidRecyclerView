<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/home_item_margin"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mutile_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/home_item_tv_textsize"
            android:padding="@dimen/home_item_margin"
            android:text="@string/rv_item_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/cardview_margin"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/cardview_margin"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>