<?xml version="1.0" encoding="utf-8"?>
<com.hongri.recyclerview.widget.SettingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/clearCache" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_31c27c"></TextView>

    <LinearLayout
        android:id="@+id/ll_convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp">

        <TextView
            android:id="@+id/tv_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_convert" />
    </LinearLayout>

    <TextView
        android:layout_width="355dp"
        android:layout_height="1dp"
        android:background="@color/color_31c27c" />

    <!--震动-->
    <Button
        android:id="@+id/vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_selector"
        android:text="@string/vibrator" />

    <!--语音识别-->
    <Button
        android:id="@+id/speechRecognizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_selector"
        android:text="@string/speechRecognizer" />
    <!--EditText 复制 剪切 粘贴-->
    <com.hongri.recyclerview.widget.MyEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_selector"
        android:hint="@string/edit_text_string" />

    <Button
        android:id="@+id/btn_exec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_selector"
        android:text="@string/exec_app" />

    <Button
        android:id="@+id/btn_open_new_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_selector"
        android:text="@string/open_new_fragment" />

    <!--使用wrap_content在不同的drawable文件夹下加载相同图片，差异会很大，故建议使用一个固定的dp值比较好-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_android"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/ll_selector"
            android:hint="@string/edit_text_keyboard"
            android:singleLine="false" />
        <!--测试软件盘的按钮-->
        <Button
            android:id="@+id/testKB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ll_selector"
            android:text="测试" />
    </LinearLayout>

    <!--各厂商角标测试-->
    <Button
        android:id="@+id/badgeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:text="Badge Test" />

    <TextView
        android:id="@+id/tv_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ll_selector"
        android:text="Good"
        android:textFontWeight="700"
        android:textSize="18dp"
        android:textStyle="bold" />

    <!--线程池测试-->
    <Button
        android:id="@+id/threadExecutorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:text="ThreadPoolExecutor" />

    <!--正则表达式：
     参考：https://www.liaoxuefeng.com/wiki/1016959663602400/1017639890281664 -->
    <Button
        android:id="@+id/regexBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:text="regex[正则表达式]" />

    <!--动画导致setVisibility/removeView失效问题解决方案:
        1、在这两处操作之前 view.clearAnimation()即可

        另外有一种情况setVisibility/removeView不会失效，
        即如下的LinearLayout(父布局)height 是wrap_content。
        -->
    <LinearLayout
        android:id="@+id/layoutAnim"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/viewAnim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ll_selector"
            android:text="动画导致setVisibility/removeView失效" />
    </LinearLayout>

    <!--Drawable的缓存机制（包含mutate）：
    参考：https://www.heqiangfly.com/2017/06/15/android-knowledge-point-drawable-cache/
    -->
    <LinearLayout
        android:id="@+id/layoutDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/first"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#1E90FF"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/second"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:background="#1E90FF"
            android:scaleType="fitXY" />
    </LinearLayout>

    <!--多渠道打包测试-->
    <Button
        android:id="@+id/flavorProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:text="多渠道打包" />

    <Button
        android:id="@+id/exceptionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector"
        android:text="无法捕获的Exception(不包含Error)"/>

</com.hongri.recyclerview.widget.SettingLayout>