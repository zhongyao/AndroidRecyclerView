<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--纯色背景 与gradient属性排斥 -->
    <solid android:color="@color/color_31c27c" />
    <!--轮廓线 -->
    <stroke
        android:width="1dp"
        android:color="@color/SwipeRefrshRingColor1"
        android:dashWidth="10dp"
        android:dashGap="3dp"/>
    <!--边角 radius优先级最低-->
    <corners
        android:bottomLeftRadius="10dp"
        android:radius="30dp"
        android:topLeftRadius="50dp"
        android:topRightRadius="100dp"
        android:bottomRightRadius="30dp"/>
    <!--表示的不是shape的空白，而是包含它的View的空白-->
    <padding
        android:bottom="@dimen/margin_50dp"
        android:left="@dimen/margin_50dp"
        android:right="@dimen/margin_50dp"
        android:top="@dimen/margin_50dp" />
    <size
        android:width="40dp"
        android:height="50dp" />
    <!-- 线性渐变-->
    <gradient
        android:angle="45"
        android:centerColor="@color/green"
        android:endColor="@color/blue"
        android:startColor="@color/red"
        android:type="linear"
        android:useLevel="false" />

